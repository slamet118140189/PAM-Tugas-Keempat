<!-- res/drawable/search_view_border.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background Shape -->
    <item android:top="1dp" android:right="8dp" android:left="8dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Background Color -->
            <corners android:radius="8dp" /> <!-- Corner Radius -->
        </shape>
    </item>

    <!-- Border -->
    <item android:top="1dp" android:right="8dp" android:left="8dp" android:bottom="1dp">
        <shape android:shape="rectangle">
            <solid android:color="#00000000" /> <!-- Transparent Background -->
            <stroke android:width="1dp" android:color="#FF000000" /> <!-- Border Color -->
            <corners android:radius="8dp" /> <!-- Corner Radius, harus sama dengan Background -->
        </shape>
    </item>
</layer-list>
